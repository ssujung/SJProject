<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:paddingBottom="20dp"
        android:paddingTop="90dp"
        android:src="@drawable/label_restau_reservation" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="110dp"
        android:paddingLeft="125dp"
        android:paddingTop="60dp"
        android:src="@drawable/label_login" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp" >

        <!-- 아이디 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="30dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:src="@drawable/label_id" />

            <EditText
                android:id="@+id/loginid"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:focusable="true"
                android:maxLength="20"
                android:paddingLeft="30dp"
                android:singleLine="true" />
        </LinearLayout>

        <!-- 비밀번호 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="30dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:src="@drawable/label_password" />

            <EditText
                android:id="@+id/loginpwd"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="30dp"
                android:singleLine="true" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons -->
    
    <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            
            <ImageButton
                android:id="@+id/loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:maxHeight="500dp"
                android:maxWidth="500dp"
                android:background="#00000000"
                android:src="@drawable/submit_btn" />

            <ImageButton 
                android:id="@+id/joinbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:maxHeight="500dp"
                android:maxWidth="500dp"
                android:background="#00000000"
                android:src="@drawable/join_btn"/>
        </LinearLayout>

</LinearLayout>