<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="260dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="30dp"
        android:src="@drawable/label_admin_reservestate" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/nowday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:paddingRight="10dp"
            android:src="@drawable/label_nowday" />

        <ImageButton
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:paddingRight="10dp"
            android:src="@drawable/label_week" />

        <ImageButton
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/label_month" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/startday"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:background="@drawable/edittext_border"
            android:textColor="#000000"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/datebtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/datetxt"
            android:background="#00000000"
            android:paddingLeft="10dp"
            android:src="@drawable/calender_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ~  "
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/endday"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:background="@drawable/edittext_border"
            android:textColor="#000000"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/datebtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/datetxt"
            android:background="#00000000"
            android:paddingLeft="10dp"
            android:src="@drawable/calender_icon" />
    </LinearLayout>

	<LinearLayout
	    android:id="@+id/llBody"
	    android:layout_width="333dp"
	    android:layout_height="239dp"
	    android:layout_gravity="center_horizontal"
	    android:orientation="vertical"
	    android:paddingTop="40dp" >
	    
	</LinearLayout>
</LinearLayout>